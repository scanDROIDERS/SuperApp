<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="botao_fresco">
        <item name="android:textColor">#0C4D8B</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:backgroundTint">@color/design_default_color_secondary</item>
    </style>

    <style name="texto_colorido">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#9766C0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="titulo_colorido">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">#9766C0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="botoes_do_titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>